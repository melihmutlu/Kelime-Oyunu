<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@drawable/background"
    android:padding="10dp"
    >

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/totalPointTextView"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/hexagon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="9800"
            android:textSize="16sp"
            android:textColor="#5d2222"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_toLeftOf="@id/timeTextView"
            android:layout_toRightOf="@id/totalPointTextView">
        <TextView
            android:id="@+id/questPointTextView"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/hexagonred"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="1000"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        </LinearLayout>

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@drawable/time"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="04:00"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:background="@drawable/oval"
            android:padding="30dp"
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="Bir şeyin üstünü kaplayan koruyucu bölüm asd asd sad sadasdsa dsad"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:background="@drawable/hexagon"
            android:id="@+id/charButton1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="F" />
        <Button
            android:background="@drawable/hexagon"
            android:id="@+id/charButton2"
            android:layout_toRightOf="@+id/charButton1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="F" />
        <Button
            android:background="@drawable/hexagon"
            android:id="@+id/charButton3"
            android:layout_toRightOf="@+id/charButton2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="F" />
        <Button
            android:background="@drawable/hexagon"
            android:id="@+id/charButton4"
            android:layout_toRightOf="@+id/charButton3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="F" />

        <Button
            android:background="@drawable/hexagon"
            android:id="@+id/charButton5"
            android:layout_toRightOf="@+id/charButton4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="F" />

        <Button
            android:background="@drawable/hexagon"
            android:id="@+id/charButton6"
            android:layout_toRightOf="@+id/charButton5"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="F" />

        <Button
            android:background="@drawable/hexagon"
            android:id="@+id/charButton7"
            android:layout_toRightOf="@+id/charButton6"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="F" />

        <Button
            android:background="@drawable/hexagon"
            android:id="@+id/charButton8"
            android:layout_toRightOf="@+id/charButton7"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="F" />
        <Button
            android:background="@drawable/hexagon"
            android:id="@+id/charButton9"
            android:layout_toRightOf="@+id/charButton8"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="F" />
        <Button
            android:background="@drawable/hexagon"
            android:id="@+id/charButton10"
            android:layout_toRightOf="@+id/charButton9"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="F" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cevaplaButton"
                android:text="Cevapla"
                android:textColor="#5d2222"
                android:background="#d3d3d3"
                android:layout_width="120dp"
                android:layout_height="60dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/harfButton"
                android:text="Harf Lütfen"
                android:background="#d3d3d3"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:textColor="#5d2222"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>